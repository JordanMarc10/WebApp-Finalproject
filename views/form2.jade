block content
  .container.form-top
  .row
    .col-md-6.col-md-offset-3.col-sm-12.col-xs-12
      .panel.panel-danger
        .panel-body
          form#mid
            .form-group
              label
                i.fa.fa-user(aria-hidden='true' action='form' method='post')
                |  Name
              input.form-control(type='text' name='name' placeholder='Enter Name')
            .form-group
              label
                i.fa.fa-envelope(aria-hidden='true')
                |  Email
              input.form-control(type='email' name='email' placeholder='Enter Email')
            .form-group
              label
                i.fa.fa-comment(aria-hidden='true')
                |  Message
              textarea.form-control(rows='3' name='message' placeholder='Type Your Message')
            .form-group
              button.btn.btn-raised.btn-block.btn-danger(value='form') Post â†’
          #error_message(style='width:100%; height:100%; display:none; ')
            h4 #{problem}
            | 						
          #success_message(style='width:100%; height:100%; display:none; ')
            h2 #{message} ! 
        